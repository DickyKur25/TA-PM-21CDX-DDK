<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewGallery"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/bgalam"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textGalleryDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewGallery"
                android:text="Pesona Pantai Marina Lampung terdapat pada hamparan karang yang berada di sepanjang pesisir pantai. Deburan ombak yang menghantam karang serta pasir putih pada pinggiran pantai menjadi daya tarik tersendiri di Pantai Marina Lampung ini."
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
